<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchedRPG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c_dark</item>
        <item name="colorPrimaryVariant">@color/c_light</item>
        <item name="colorOnPrimary">@color/c_lightest</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/c_accent</item>
        <item name="colorSecondaryVariant">@color/c_accent</item>
        <item name="colorOnSecondary">@color/c_darkest</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/c_status_bar_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/c_dark</item>
        <item name="android:windowBackground">@color/c_darkest</item>
        <item name="android:textColorTertiary">@color/c_lightest</item>
        <item name="android:textColor">@color/c_lightest</item>
        <item name="android:textColorHint">@color/c_dark</item>
        <item name="checkboxStyle">@style/myCheckBox</item>
        <item name="android:alertDialogStyle">@style/AlertDialogStyle</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerStyle</item>

    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/c_lightest</item>                   <!--header background-->
        <item name="android:windowBackground">@color/c_darkest </item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/c_accent</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/c_lightest</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/c_accent</item>    <!--days of the week-->
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:background">@color/c_darkest</item>
    </style>



    <style name="myCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/c_lightest</item>
        <item name="android:textColor">@color/c_lightest</item>
    </style>

    <style name="Theme.SchedRPG.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>