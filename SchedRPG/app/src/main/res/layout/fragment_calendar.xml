<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSecondary"
    tools:context="com.vladv.questsched.tabs.fragments.calendar.CalendarFragment">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:abbreviationsBarColor="?attr/colorOnSecondary"
        app:abbreviationsLabelsColor="?attr/colorSecondary"
        app:daysLabelsColor="?attr/colorPrimaryVariant"
        app:headerColor="?attr/colorPrimaryVariant"
        app:headerLabelColor="?attr/colorOnSecondary"
        app:highlightedDaysLabelsColor="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pagesColor="?attr/colorOnSecondary"
        app:todayLabelColor="?attr/colorOnPrimary"
        />
</androidx.constraintlayout.widget.ConstraintLayout>