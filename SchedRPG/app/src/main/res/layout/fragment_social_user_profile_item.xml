<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/friendProfileQuestLayout"
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:layout_marginTop="3sp"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.8"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/socialQuestTypeImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/quest_type_strenght"
                app:tint="?attr/colorOnPrimary" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/socialQuestName"
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:layout_weight="0.6"
                    android:text="TaskName"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/socialQuestType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stat" />

                    <TextView
                        android:id="@+id/socialQuestDificulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Difficulty" />

                </LinearLayout>

                <TextView
                    android:id="@+id/socialQuestDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.4"
                    android:text="Description" />

            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:id="@+id/copyFriendQuest"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="0.3"
            android:background="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorOnPrimary"
            app:srcCompat="@drawable/social_quest_copy"
            app:tint="?attr/colorSecondary"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="?attr/colorSecondary" />

    </LinearLayout>


</RelativeLayout>
