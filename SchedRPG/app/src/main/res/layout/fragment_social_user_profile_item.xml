<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3sp">

    <LinearLayout
        android:id="@+id/questItemListLinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/socialQuestName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TaskName"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="27sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/socialQuestType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stat" />

                    <TextView
                        android:id="@+id/socialQuestDificulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Difficulty" />

                </LinearLayout>

                <TextView
                    android:id="@+id/socialQuestDescription"
                    android:layout_width="match_parent"
                    android:layout_height="39sp"
                    android:layout_marginTop="5sp"
                    android:text="Description" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10sp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/copyFriendQuest"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.5"
                    android:backgroundTint="?attr/colorSecondary"
                    android:text="Copy" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="?attr/colorSecondary" />
    </LinearLayout>


</RelativeLayout>
