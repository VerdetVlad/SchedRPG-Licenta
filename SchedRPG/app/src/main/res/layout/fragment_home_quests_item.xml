<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1sp">

        <LinearLayout
            android:id="@+id/questItemListLinLayout"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:background="?attr/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/homeQuestTypeImage"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/quest_type_strenght"
                    app:tint="?attr/colorOnPrimary" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/taskItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="0sp"
                        android:layout_weight="0.6"
                        android:text="TaskName"
                        android:textSize="26sp"
                        android:textStyle="bold" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/taskItemType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Stat" />

                        <TextView
                            android:id="@+id/taskItemDifficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Difficulty" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/taskItemDescription"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.4"
                        android:text="Description" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="3sp"
                android:layout_weight="0.3">

                <ImageButton
                    android:id="@+id/finishQuestButton"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:layout_weight="0.5"
                    android:background="@color/green"
                    app:srcCompat="@drawable/button_accept"
                    tools:ignore="SpeakableTextPresentCheck" />


                <ImageButton
                    android:id="@+id/abandonQuestButton"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:layout_weight="0.5"
                    android:background="#BC1C1C"
                    app:srcCompat="@drawable/button_decline" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="?attr/colorSecondary" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>