<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vladv.questsched.authentification.Register">

    <ProgressBar
        android:id="@+id/progressBarReg"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="380sp"
        android:layout_height="70sp"
        android:layout_marginTop="20sp"
        android:text="@string/register"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordReg"
        tools:textSize="24sp" />

    <EditText
        android:id="@+id/passwordReg"
        android:layout_width="340sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Password"
        android:textColor="?attr/colorOnPrimary"
        android:inputType="textPassword"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailReg" />

    <EditText
        android:id="@+id/emailReg"
        android:layout_width="340sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Email Address"
        android:textColor="?attr/colorOnPrimary"
        android:inputType="textEmailAddress"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="340sp"
        android:layout_height="73sp"
        android:layout_marginTop="50sp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Full Name"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameReg" />

    <TextView
        android:id="@+id/appNameReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:fontFamily="sans-serif-black"
        android:text="@string/schedulerrpg"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>