<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1sp">

        <LinearLayout
            android:id="@+id/questItemDayLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#65F68508"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="270sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/taskItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TaskName"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="27sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/taskItemType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Stat" />

                        <TextView
                            android:id="@+id/taskItemDifficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Difficulty" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/taskItemDescription"
                        android:layout_width="match_parent"
                        android:layout_height="39sp"
                        android:layout_marginTop="5sp"
                        android:text="Description" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/finishQuestButton"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.5"
                        android:backgroundTint="#3FBC1C"
                        android:text="âœ“"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/abandonQuestButton"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.5"
                        android:backgroundTint="#BC1C1C"
                        android:text="X" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/teal_200" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>