<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userSocialImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:src="@drawable/avatar"
                app:civ_circle_background_color="?attr/colorOnPrimary" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userSocialName"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="User Name"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userSocialLastMessage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:text="No messages"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/friendViewProfileButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="0.5"
                android:background="?attr/colorOnPrimary"
                app:srcCompat="@drawable/social_view_profile"
                app:tint="?attr/colorSecondary" />

            <ImageButton
                android:id="@+id/friendMessageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="0.5"
                android:background="?attr/colorOnPrimary"
                app:srcCompat="@drawable/social_message"
                app:tint="?attr/colorSecondary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="?attr/colorSecondary" />
    </LinearLayout>

</RelativeLayout>